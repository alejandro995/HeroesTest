{
    "exclude": [ "node_modules"],
    "compilerOptions": {
        "module": "es2015",
        "target": "es5",
        "baseUrl": ".",
        "paths": {
            "*": [
              "*",
              "generated/*"
            ]
          },
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "lib": [
            "es2015",
            "dom"
        ],
        "typeRoots": [
            "../node_modules/@types"
          ],
        "types":["node", "jasmine", "core-js"],
        "emitDecoratorMetadata": true /* Important for injectables in services to recognize the parameter when is use by a component*/,
        "sourceMap": true,
        "listFiles": true,
        "noEmitOnError": false,
        "removeComments": true,
        "noImplicitAny": false
    }
    ,
    "awesomeTypeScriptLoaderOptions": {
        "useWebpackText": true,
        "useTranspileModule": true,
        "doTypeCheck": true,
        "forkChecker": true
    }
}